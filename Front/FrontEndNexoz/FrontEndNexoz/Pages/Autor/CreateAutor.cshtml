@page
@model FrontEndNexoz.Pages.Autor.CreateAutorModel
@{
}

<br />
<h2>Crear Autores</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' arial-label='close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.ObjAutor.Nombre" />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha Nacimiento</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="nacimiento" value="@Model.ObjAutor.FechaNacimiento" />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Ciudad procedencia</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ciudad" value="@Model.ObjAutor.CiudadProcedencia" />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Correo</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" name="correo" value="@Model.ObjAutor.Correo" />
        </div>
    </div>
    @if (Model.succesMessage.Length > 0)
{
    <div class='alert alert-succes alert-dismissible fade show' role='alert'>
        <strong>@Model.succesMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' arial-label='close'></button>
    </div>
}
     <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary"> submit <button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Autor/Index" role="button">Cancel</a>
        </div>
    </div>
</form>